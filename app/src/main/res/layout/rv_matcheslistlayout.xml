<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/item_border"
    style="@style/Base.Theme.NinetyPlus">

    <!-- Liga adı -->
    <TextView
        android:id="@+id/leagueNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        style="@style/Base.Theme.NinetyPlus"
        android:layout_gravity="center_horizontal"/>

    <!-- Takımlar ve skorlar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/Base.Theme.NinetyPlus"
        android:layout_marginTop="8dp">

        <!-- Ev sahibi takım -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Base.Theme.NinetyPlus"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Takım logosu -->
            <ImageView
                android:id="@+id/homeTeamLogoImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                style="@style/Base.Theme.NinetyPlus"
                android:adjustViewBounds="true"/>

            <!-- Takım ismi -->
            <TextView
                android:id="@+id/homeTeamNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                style="@style/Base.Theme.NinetyPlus"
                android:text="@string/home_team_title"
                android:layout_gravity="center"/>

            <!-- Ev sahibi takımın skoru -->
            <TextView
                android:id="@+id/homeTeamScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/Base.Theme.NinetyPlus"
                android:text="X"
                android:layout_gravity="center"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/md_theme_light_tertiary"/>

        <!-- Deplasman takım -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            style="@style/Base.Theme.NinetyPlus"
            android:padding="8dp">

            <!-- Takım logosu -->
            <ImageView
                android:id="@+id/awayTeamLogoImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                style="@style/Base.Theme.NinetyPlus"
                android:adjustViewBounds="true"/>

            <!-- Takım ismi -->
            <TextView
                android:id="@+id/awayTeamNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                style="@style/Base.Theme.NinetyPlus"
                android:text="@string/away_team_title"
                android:layout_gravity="center"/>

            <!-- Deplasman takımın skoru -->
            <TextView
                android:id="@+id/awayTeamScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/Base.Theme.NinetyPlus"
                android:text="X"
                android:layout_gravity="center"/>


        </LinearLayout>
    </LinearLayout>

    <!-- Maç Bilgileri -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/Base.Theme.NinetyPlus"
        android:layout_marginTop="16dp">

        <!-- Maç Saati -->
        <TextView
            android:id="@+id/matchTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            style="@style/Base.Theme.NinetyPlus"
            android:text="Maç Saati: 20:00"
            android:layout_gravity="center"/>

        <!-- Maç Durumu -->
        <TextView
            android:id="@+id/matchStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            style="@style/Base.Theme.NinetyPlus"
            android:text="Maç Durumu"
            android:layout_gravity="center"/>

</LinearLayout>

</LinearLayout>